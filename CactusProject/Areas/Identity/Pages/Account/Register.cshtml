@page
@model RegisterModel

 <link rel="stylesheet" href="~/css/loginbutton.css" />
<div class="row">
    <div class="container col-md-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-5 row">
            <h3>Register</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="."/>
                <label asp-for="Input.Email" class="mx-lg-2"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <div class="form-floating py-1">
                <input asp-for="Input.FullName" class="form-control" autocomplete="new-password" aria-required="true" placeholder="."/>
                <label asp-for="Input.FullName" class="mx-lg-2"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
             <div class="form-floating py-1">
                <input asp-for="Input.StreetAddress" class="form-control" autocomplete="new-password" aria-required="true" placeholder="."/>
                <label asp-for="Input.StreetAddress" class="mx-lg-2"></label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
             <div class="form-floating py-1">
                <input asp-for="Input.City" class="form-control" autocomplete="new-password" aria-required="true" placeholder="."/>
                <label asp-for="Input.City" class="mx-lg-2"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
             <div class="form-floating col-6 py-1">
                <input asp-for="Input.State" class="form-control" autocomplete="new-password" aria-required="true" placeholder="."/>
                <label asp-for="Input.State" class="mx-lg-2"></label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
             <div class="form-floating col-6 py-1">
                <input asp-for="Input.PostalCode" class="form-control" autocomplete="new-password" aria-required="true" placeholder="."/>
                <label asp-for="Input.PostalCode" class="mx-lg-2"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>

            <div class="form-floating col-6 py-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="."/>
                <label asp-for="Input.Password" class="mx-lg-2"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating col-6 py-1">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="." />
                <label asp-for="Input.ConfirmPassword" class="mx-lg-2"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="form-floating py-2 col-6">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" >
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="login-box">
            <button type="submit" class="w-100 p-3">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
